---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: cp4waiops-demo-ui
  namespace: {{current_cp4waiops_cluster.project}}-demo-ui
  labels:
      app: cp4waiops-demo-ui
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cp4waiops-demo-ui
  template:
    metadata:
      labels:
        app: cp4waiops-demo-ui
    spec:
      containers:
      - image: niklaushirt/cp4waiops-demo-ui:0.71
        imagePullPolicy: Always
        name: cp4waiops-demo-ui
        command:
        ports:
        - containerPort: 8000
        resources:
          requests:
            cpu: "50m"
            memory: "50Mi"
          limits:
            cpu: "550m"
            memory: "550Mi"
        readinessProbe:
          httpGet:
            path: /health
            port: 8000
            scheme: HTTP
          initialDelaySeconds: 60
          timeoutSeconds: 1
          periodSeconds: 10
          successThreshold: 1
          failureThreshold: 3
        envFrom:
        - configMapRef:
            name:  cp4waiops-demo-ui-config
        - configMapRef:
            name:  cp4waiops-demo-ui-config-events
        - configMapRef:
            name:  cp4waiops-demo-ui-config-logs
        - configMapRef:
            name:  cp4waiops-demo-ui-config-metrics
      serviceAccountName: cp4waiops-demo-ui-admin

---
apiVersion: v1
kind: Service
metadata:
  name: cp4waiops-demo-ui-service
  namespace: {{current_cp4waiops_cluster.project}}-demo-ui
spec:
  selector:
    app: cp4waiops-demo-ui
  ports:
    - protocol: TCP
      port: 8000
      targetPort: 8000
---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name:  cp4waiops-demo-ui
  namespace: {{current_cp4waiops_cluster.project}}-demo-ui
spec:
  to:
    kind: Service
    name: cp4waiops-demo-ui-service
    weight: 100
  port:
    targetPort: 8000
  wildcardPolicy: None

